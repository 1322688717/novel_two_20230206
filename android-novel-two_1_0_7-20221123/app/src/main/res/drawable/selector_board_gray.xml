    <!-- 按压状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="@color/colorButtonPressed" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- 焦点状态 -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="@color/colorButtonPressed" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0.5dp" android:color="@color/colorLine" />
            <corners android:radius="5dp" />
        </shape>
    </item>

