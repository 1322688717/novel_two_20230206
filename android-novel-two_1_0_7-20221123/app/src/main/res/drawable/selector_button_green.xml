<?xml version="1.0" encoding="utf-8"?>
<!-- 白色背景按压效果样式 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!--    &lt;!&ndash; 按压状态 &ndash;&gt;-->
<!--    <item android:drawable="@color/black5" android:state_pressed="true" />-->

<!--    &lt;!&ndash; 选中状态 &ndash;&gt;-->
