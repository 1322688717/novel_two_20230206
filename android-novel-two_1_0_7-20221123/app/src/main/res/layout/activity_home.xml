<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cc.ixcc.noveltwo.ui.activity.HomeActivity">

    <com.jiusen.widget.layout.NoScrollViewPager
        android:id="@+id/vp_home_pager"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bv_home_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9f9f9"
        app:itemTextColor="@drawable/selector_home_navigation_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_home_bottom_nav" />

    <LinearLayout
        android:id="@+id/ll_move_book"
        android:background="@color/colorbg"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="12dp"
            android:layout_height="13dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/del_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:textColor="@color/dz"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:textSize="13sp"
            />
    </LinearLayout>

</LinearLayout>