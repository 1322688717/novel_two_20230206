<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/mode2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novels For U Best"
            android:drawableLeft="@mipmap/shujia"
            android:drawablePadding="5dp"
            android:textColor="#ff0a1c33"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/mode2_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableRight="@mipmap/more_icon"
            android:drawablePadding="2dp"
            android:text="More"
            android:textColor="#ff0a1c33"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/mode2_img"
            android:layout_width="85dp"
            android:layout_height="119dp"
            app:riv_corner_radius="5dp"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/mode2_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Domineering Billionaire Husband: Please Love Me Gently"
                android:textColor="@color/books_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mode2_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mode2_name"
                android:layout_marginTop="10dp"
                android:background="#FFFDF9"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="13dp"
                android:text="Kalliyah's twin sister, Alliyah decides to have an affair with an older man. The affair led to Alliyah getting pregnant. After a couple of months of taking care of the child"
                android:textColor="@color/settings_title"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/mode2_name"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mode2_pingfen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.3"
                    android:textColor="#fffcad0f"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#fffcad0f"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/mode2_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Jk Bartolome"
                    android:textColor="@color/pay_tip"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/mode2_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_board_red"
                    android:paddingLeft="7dp"
                    android:paddingTop="4dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="4dp"
                    android:text="古代言情"

                    android:visibility="gone"
                    android:textColor="@color/colorRed"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/mode2_lianzai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_board_gray"
                    android:paddingLeft="7dp"
                    android:paddingTop="4dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="4dp"
                    android:text="连载中"
                    android:visibility="gone"
                    android:textColor="#ffbfc2cc"
                    android:textSize="10sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <com.jiusen.widget.layout.WrapRecyclerView
        android:id="@+id/mode2_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorBoard" />
</LinearLayout>