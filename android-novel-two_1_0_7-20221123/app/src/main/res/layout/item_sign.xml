<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:paddingTop="10dp"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:id="@+id/sign_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/icon_x3" />

            </LinearLayout>

            <TextView
                android:id="@+id/coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30"
                android:gravity="center"
                android:textColor="#ffff35bf"
                android:textSize="10sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="@id/sign_icon"
                app:layout_constraintRight_toRightOf="@id/sign_icon" />
            <ImageView
                android:id="@+id/icon_coins"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="35dp"
                android:src="@mipmap/icon_rewards"
                app:layout_constraintTop_toTopOf="@id/sign_icon"
                app:layout_constraintRight_toRightOf="@id/sign_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Mon."
        android:textColor="#ffb0b0b0"
        android:textSize="12sp"
        tools:ignore="MissingConstraints" />

</LinearLayout>