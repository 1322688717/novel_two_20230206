<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="19.5dp">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="#efeff1" />
        <LinearLayout
            android:id="@+id/ll_time"
            android:paddingTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/line"
                android:text="30 minutes of reading"
                android:textColor="@color/books_name"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:layout_alignStart="@+id/info"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ll_time"
            android:drawableLeft="@mipmap/icon_coin"
            android:drawablePadding="6dp"
            android:text="+70Coins"
            android:textColor="@color/tagSelected"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_time"
            android:layout_marginTop="5dp"
            android:text="Read for 5 minutes"
            android:textColor="@color/pay_tip"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_conner_blue_light"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingTop="5.5dp"
            android:paddingRight="12dp"
            android:paddingBottom="5.5dp"
            android:text="Complete"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </RelativeLayout>
</LinearLayout>