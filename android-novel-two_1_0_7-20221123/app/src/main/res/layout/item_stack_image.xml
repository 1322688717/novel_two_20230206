<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:drawableLeft="@mipmap/shujia"
            android:drawablePadding="5dp"
            android:text="Novels For U Best"
            android:textColor="#ff0a1c33"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/title"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="5dp"
            android:drawableRight="@mipmap/more_icon"
            android:drawablePadding="2dp"
            android:text="More"
            android:textColor="#ff0a1c33"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/vv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/miss_img"></ImageView>

    <com.jiusen.widget.layout.WrapRecyclerView
        android:id="@+id/rv_hot_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:visibility="gone" />


</LinearLayout>