<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/mode9_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novels For U Best"
            android:drawableLeft="@mipmap/shujia"
            android:drawablePadding="5dp"
            android:textColor="#ff0a1c33"
            android:textSize="17sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/mode9_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableRight="@mipmap/more_icon"
            android:drawablePadding="2dp"
            android:text="More"
            android:textColor="#ff0a1c33"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFFDF9"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="14dp"
        android:paddingTop="14dp"
        android:paddingRight="14dp"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/douhao"
                android:layout_width="26dp"
                android:layout_height="22dp"
                android:src="@mipmap/icon_douhao"/>

            <TextView
                android:id="@+id/mode9_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Kalliyah's twin sister, Alliyah decides to have an affair with an older man. The affair led to Alliyah getting pregnant. After a couple of months of taking care of the child"
                android:textColor="#ff606266"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mode9_img"
                android:layout_width="85dp"
                android:layout_height="119dp"
                app:riv_corner_radius="5dp"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp">

                <TextView
                    android:id="@+id/mode9_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Domineering Billionaire Husband: Please Love Me Gently"
                    android:textColor="#ff303133"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mode9_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mode9_name"
                    android:layout_marginTop="19dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Jk Bartolome"
                    android:textColor="@color/colorButtonPressed"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mode9_name"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/mode9_pingfen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.3"
                        android:textColor="#fffcad0f"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mode9_fen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/name"
                        android:layout_alignParentRight="true"
                        android:text=" "
                        android:textColor="#fffcad0f"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/mode9_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_board_red"
                        android:paddingLeft="7dp"
                        android:paddingTop="4dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="4dp"
                        android:text="Rommance"
                        android:textColor="@color/colorButtonPressed"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/mode9_lianzai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bg_board_gray"
                        android:paddingLeft="7dp"
                        android:paddingTop="4dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="4dp"
                        android:text="Rommance"
                        android:textColor="#ffbfc2cc"
                        android:textSize="10sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <com.jiusen.widget.layout.WrapRecyclerView
        android:id="@+id/rv_mode9_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp" />

    <com.jiusen.widget.layout.WrapRecyclerView
        android:id="@+id/rv_mode9_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorBoard" />
</LinearLayout>