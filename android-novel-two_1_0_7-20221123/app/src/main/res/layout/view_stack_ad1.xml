<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bg_board_gray2"
    android:orientation="vertical">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:id="@+id/mode1_ad"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:cardBackgroundColor="@color/white"-->
<!--        app:cardCornerRadius="@dimen/dialog_ui_round_size"-->
<!--        app:cardUseCompatPadding="true"-->
<!--        app:cardPreventCornerOverlap="false"-->
<!--        app:cardElevation="1dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/mode1_ad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="有哪些学生党相见恨晚的英语学习app"
                android:textColor="#ff303133"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mode1_ad_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="睡前10分钟，刷一刷这些视频，再搭配科学的单词，听力和口语学习系统，从而实现真正的高效突破"
                    android:textColor="#ff606266"
                    android:textSize="13sp" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/mode1_ad_img"
                    android:layout_width="96dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="13dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/mode1_ad_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广告"
                    android:textColor="#ffbfc2cc"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/mode1_ad_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:text="立即下载"
                    android:textColor="#ffbfc2cc"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/mode1_ad_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/icon_x2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
<!--    </androidx.cardview.widget.CardView>-->

</LinearLayout>