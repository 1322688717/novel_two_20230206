    <!-- android:layout_width="match_parent"-->


    <!-- android:layout_height="wrap_content"-->


    <!-- android:text="更多设置 >>"-->


    <!-- android:textColor="@color/nb.read.menu.text"-->


    <!-- android:gravity="center_horizontal"-->


    <!-- android:layout_marginTop="20dp"/>-->


</LinearLayout>