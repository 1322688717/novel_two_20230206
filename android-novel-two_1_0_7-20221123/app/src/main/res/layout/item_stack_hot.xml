<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/book_img"
            android:layout_width="85dp"
            android:layout_height="111dp"
            app:riv_corner_radius="5dp"
            android:scaleType="centerCrop"/>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="A Force Love Contract With GANG LEADER"
                android:textColor="@color/books_name"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/hot"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_board_gray"
                android:paddingLeft="7dp"
                android:paddingTop="4dp"
                android:paddingRight="7dp"
                android:paddingBottom="4dp"
                android:text="Rommance"
                android:textColor="#ffbfc2cc"
                android:textSize="10sp"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/hot"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_board_gray"
                android:paddingLeft="7dp"
                android:paddingTop="4dp"
                android:paddingRight="7dp"
                android:paddingBottom="4dp"
                android:text="author"
                android:textColor="#ffbfc2cc"
                android:textSize="10sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:drawableLeft="@mipmap/hot_icon"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="452.3Hot"
                android:textColor="#fff5325e"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvVip"
        android:background="@drawable/bg_book_vip"
        android:text="VIP"
        android:gravity="center"
        android:textSize="@dimen/tvVipSize"
        android:textStyle="italic|bold"
        android:visibility="gone"
        android:textColor="@color/ColorBookVip"
        android:layout_width="27dp"
        android:layout_height="14dp"/>

    <LinearLayout
        android:id="@+id/ll_pingfen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_conner_yellow"
        android:paddingLeft="4dp"
        android:paddingTop="1dp"
        android:paddingRight="4dp"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/pingfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.3"
            android:textColor="#ffffffff"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/name"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="10sp" />
    </LinearLayout>
</RelativeLayout>