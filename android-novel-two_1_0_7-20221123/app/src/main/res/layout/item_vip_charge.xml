<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="100dp"
        android:layout_height="140dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/money"
        android:id="@+id/day"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 days"
        android:textColor="@color/books_name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/money"
        app:layout_constraintTop_toBottomOf="@id/day"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/old_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$6.00"
        android:textStyle="bold"
        android:textColor="#ffefc54e"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/old_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$60.00"
        android:textColor="@color/colorContent"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/money" />

    <TextView
        android:id="@+id/song"
        android:layout_width="60dp"
        android:layout_height="19dp"
        android:background="@drawable/bg_board_blue7"
        android:gravity="center"
        android:text="+30 days"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/ivBg"
        app:layout_constraintLeft_toLeftOf="@id/ivBg"
        app:layout_constraintTop_toTopOf="@id/ivBg" />
</androidx.constraintlayout.widget.ConstraintLayout>